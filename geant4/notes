- patch geant4 to compile under solaris 11 (+examples -> +socket nls)
- http://hub.opensolaris.org/bin/view/Project+opengrok/installdescription

cp ~/Downloads/geant4.9.5.p01.tar.gz /tmp
cd /tmp && tar xzfv geant4.9.5.p01.tar.gz
mkdir geant4.9.5.p01-build
cd geant4.9.5.p01-build

sudo yum groupinstall "X Software Development"
sudo yum install xerces-c-devel				# Needed for GDML

cmake -DCMAKE_INSTALL_PREFIX=/opt/geant4.9.5.p01	\
      -CMAKE_BUILD_TYPE=Debug				\
      -DGEANT4_USE_GDML=ON				\
      -GEANT4_USE_OPENGL_X11=ON				\
            /tmp/geant4.9.5.p01
make -j5
sudo make install
