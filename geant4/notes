--- HOW TO INSTALL GEANT4 in Fedora 16 ---
wget http://geant4.cern.ch/support/source/geant4.9.5.p01.tar.gz
cp ~/Downloads/geant4.9.5.p01.tar.gz /tmp
cd /tmp && tar xzfv geant4.9.5.p01.tar.gz
mkdir geant4.9.5.p01-build
cd geant4.9.5.p01-build

sudo yum install cmake
sudo yum groupinstall "X Software Development"		# Needed for visualisation
sudo yum install xerces-c-devel				# Needed for GDML

cmake -DCMAKE_INSTALL_PREFIX=/opt/geant4.9.5.p01	\
      -DCMAKE_BUILD_TYPE=Debug				\
      -DGEANT4_USE_GDML=ON				\
      -DGEANT4_USE_OPENGL_X11=ON			\
            /tmp/geant4.9.5.p01
make -j5
sudo make install

# Neutron data files WITH thermal cross sections - version 4.0
wget http://geant4.cern.ch/support/source/G4NDL.4.0.tar.gz

# Neutron data files WITHOUT thermal cross sections - version 0.2
wget http://geant4.cern.ch/support/source/G4NDL.0.2.tar.gz

# Data files for low energy electromagnetic processes - version 6.23
wget http://geant4.cern.ch/support/source/G4EMLOW.6.23.tar.gz

# Data files for photon evaporation - version 2.2
wget http://geant4.cern.ch/support/source/G4PhotonEvaporation.2.2.tar.gz

# Data files for radioactive decay hadronic processes - version 3.4
wget http://geant4.cern.ch/support/source/G4RadioactiveDecay.3.4.tar.gz

# Data files for nuclear shell effects in INCL/ABLA hadronic model - version 3.0
wget http://geant4.cern.ch/support/source/G4ABLA.3.0.tar.gz

# Data files for evaluated neutron cross sections on natural composition of elements - version 1.1
wget http://geant4.cern.ch/support/source/G4NEUTRONXS.1.1.tar.gz

# Data files for shell ionisation cross sections - version 1.3
wget http://geant4.cern.ch/support/source/G4PII.1.3.tar.gz

# Data files for measured optical surface reflectance - version 1.0
wget http://geant4.cern.ch/support/source/RealSurface.1.0.tar.gz

-- HOW TO INSTALL GEANT4 IN SOLARIS 11 ---
* cmake 2.8 is needed but, as of the time of writing, Solaris 11 bundles cmake 2.6
* one needs to install cmake 2.6 and then use that to bootstrap cmake 2.8
* finally use cmake 2.8 to build geant4 as previously advised

--- HOW TO BUILD AND RUN EXAMPLES ---

cd /tmp/geant4.9.5.p01/examples/novice
mkdir N02-build && cd N02-build
cmake -DGeant4_DIR=/opt/geant4.9.5.p01/lib/Geant4-9.5.1 ../N02
make && ./exampleN02


